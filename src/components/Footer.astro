    margin: 0;
    max-width: 46ch;
    line-height: 1.6;
  }

  .site-footer__brand dl {
    margin: 1.25rem 0 0;
    display: grid;
    gap: 0.75rem;
  }

  .site-footer__brand dt {
    font-weight: 600;
    font-size: 0.85rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: rgba(243, 255, 229, 0.7);
  }

  .site-footer__brand dd {
    margin: 0;
    font-size: 0.95rem;
  }

  .site-footer__columns {
    display: grid;
    gap: clamp(2rem, 6vw, 3rem);
  }

