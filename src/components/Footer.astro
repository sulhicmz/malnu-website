    font-size: 1.05rem;
    color: #e9ffe0;
  }

  .site-footer__column ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.65rem;
  }

  .site-footer__column a {
    color: rgba(243, 255, 229, 0.85);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
  }

  .site-footer__column a:hover,
  .site-footer__column a:focus-visible {
    color: #ffffff;
  }

  .site-footer__meta {
    border-top: 1px solid rgba(243, 255, 229, 0.16);
    margin-top: clamp(2.5rem, 6vw, 3.5rem);
    padding-top: clamp(1.5rem, 4vw, 2rem);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: flex-start;
  }

  .site-footer__meta nav {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .site-footer__meta a {
