---
const navLinks = [
  { href: '/', label: 'Beranda' },
  { href: '/profil', label: 'Profil' },
  { href: '/ppdb', label: 'PPDB' },
  { href: '/e-learning', label: 'E-Learning' },
  { href: '/alumni', label: 'Alumni' },
  { href: '/arsip', label: 'Arsip' },
  { href: '/berita', label: 'Berita' },
  { href: '/beasiswa', label: 'Beasiswa' },
  { href: '/kontak', label: 'Kontak' }
];
const currentPath = Astro.url.pathname.replace(/\/$/, '') || '/';
const isActive = (href: string) => {
  if (href === '/') {
    return currentPath === '/';
  }
  return currentPath.startsWith(href);
};
---
<header class="main-header" role="banner">
  <div class="main-header__container">
    <a class="brand" href="/" aria-label="Beranda MA Malnu Kananga">
      <span class="brand-mark" aria-hidden="true">MA</span>
      <span class="brand-text">
        <strong>MA MALNU Kananga</strong>
        <span>Madrasah Aliyah Modern</span>
      </span>
    </a>
    <button class="menu-toggle" type="button" aria-expanded="false" aria-controls="main-navigation">
      <span class="sr-only">Buka menu navigasi</span>
      <svg viewBox="0 0 24 24" aria-hidden="true" focusable="false">
        <path d="M4 6h16M4 12h16M4 18h16" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
      </svg>
    </button>
    <nav
      id="main-navigation"
      class="nav"
      aria-label="Navigasi utama"
      aria-hidden="true"
      data-open="false"
    >
      <div class="nav__panel">
        <ul>
          {navLinks.map((item) => (
            <li>
              <a
                href={item.href}
                data-active={isActive(item.href)}
                aria-current={isActive(item.href) ? 'page' : undefined}
              >
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </nav>
  </div>
  <div class="scrim" hidden></div>
</header>
<script type="module">
  const header = document.currentScript?.closest('.main-header');
  const toggle = header?.querySelector<HTMLButtonElement>('.menu-toggle');
  const nav = header?.querySelector<HTMLElement>('#main-navigation');
  const panel = nav?.querySelector<HTMLElement>('.nav__panel');
  const scrim = header?.querySelector('.scrim');
  const showScrim = () => {
    scrim?.removeAttribute('hidden');
    window.requestAnimationFrame(() => {
      scrim?.classList.add('is-active');
    });
  };
  const hideScrim = () => {
    if (!scrim) return;
    scrim.classList.remove('is-active');
    window.setTimeout(() => {
      scrim.setAttribute('hidden', '');
    }, 220);
  };
  const focusableSelector = 'a[href], button:not([disabled]), [tabindex="0"]';
  const closeMenu = (returnFocus = true) => {
    if (!toggle || !nav) return;
    toggle.setAttribute('aria-expanded', 'false');
    nav.setAttribute('data-open', 'false');
    nav.setAttribute('aria-hidden', 'true');
    const label = toggle.querySelector('.sr-only');
    if (label) {
      label.textContent = 'Buka menu navigasi';
    }
    hideScrim();
    if (returnFocus && typeof toggle.focus === 'function') {
      toggle.focus({ preventScroll: true });
    }
    document.body.classList.remove('nav-open');
  };
  toggle?.addEventListener('click', () => {
    if (!toggle || !nav) return;
    const expanded = toggle.getAttribute('aria-expanded') === 'true';
    const next = !expanded;
    toggle.setAttribute('aria-expanded', String(next));
    nav.setAttribute('data-open', String(next));
    nav.setAttribute('aria-hidden', String(!next));
    const label = toggle.querySelector('.sr-only');
    if (label) {
      label.textContent = next ? 'Tutup menu navigasi' : 'Buka menu navigasi';
    }
    if (next) {
      showScrim();
      document.body.classList.add('nav-open');
      const focusTarget = panel?.querySelector('a');
      if (focusTarget && typeof focusTarget.focus === 'function') {
        focusTarget.focus({ preventScroll: true });
      }
    } else {
      hideScrim();
      document.body.classList.remove('nav-open');
    }
  });
  const handleTrapFocus = (event: KeyboardEvent) => {
    if (toggle?.getAttribute('aria-expanded') !== 'true' || !nav) return;
    if (event.key !== 'Tab') return;
    const navElements = Array.from(panel?.querySelectorAll(focusableSelector) ?? []) as HTMLElement[];
    const focusable: HTMLElement[] = toggle ? [toggle, ...navElements] : navElements;
    if (!focusable.length) return;
    const first = focusable[0];
    const last = focusable[focusable.length - 1];
    if (event.shiftKey) {
      if (document.activeElement === first) {
        event.preventDefault();
        last.focus();
      }
    } else if (document.activeElement === last) {
      event.preventDefault();
      first.focus();
    }
  };
  header?.addEventListener('keydown', handleTrapFocus);
  if (panel) {
    panel.querySelectorAll('a').forEach((link) => {
      link.addEventListener('click', () => {
        if (window.matchMedia('(max-width: 767px)').matches) {
          closeMenu(false);
        }
      });
    });
  }
  scrim?.addEventListener('click', () => closeMenu());
  const mq = window.matchMedia('(min-width: 768px)');
  const handleMediaChange = (event: MediaQueryListEvent | MediaQueryList) => {
    if (event.matches) {
      closeMenu(false);
    }
  };
  if ('addEventListener' in mq) {
    mq.addEventListener('change', handleMediaChange);
  } else {
    mq.addListener(handleMediaChange);
  }
  window.addEventListener('keydown', (event) => {
    if (event.key === 'Escape' && toggle?.getAttribute('aria-expanded') === 'true') {
      closeMenu();
    }
  });
</script>
<style>
  .main-header {
    position: sticky;
    top: 0;
    z-index: 90;
    padding: clamp(0.75rem, 2vw, 1.25rem) clamp(1rem, 5vw, 2rem) 0;
    pointer-events: none;
  }

  .main-header__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: nowrap;
    max-width: 1100px;
    margin: 0 auto;
    border-radius: 1.25rem;
    background: rgba(243, 255, 229, 0.92);
    backdrop-filter: blur(18px);
    box-shadow: 0 12px 32px rgba(10, 31, 12, 0.16);
    padding: 0.6rem 0.85rem;
    pointer-events: auto;
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    min-height: 48px;
    color: #0f2910;
    flex: 1 1 auto;
    min-width: 0;
  }

  .brand:focus-visible {
    outline: 3px solid rgba(0, 166, 166, 0.45);
    outline-offset: 6px;
    border-radius: 1rem;
  }

  .brand-mark {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border-radius: 18px;
    background: linear-gradient(140deg, #2e7d32, #1d4f25);
    color: #f3ffe5;
    font-weight: 700;
    letter-spacing: 0.04em;
  }

  .brand-text {
    display: flex;
    flex-direction: column;
    line-height: 1.15;
    min-width: 0;
  }

  .brand-text strong {
    font-size: clamp(1rem, 3.5vw, 1.15rem);
    line-height: 1.1;
  }

  .brand-text span {
    font-size: clamp(0.7rem, 2.4vw, 0.8rem);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    color: rgba(15, 41, 16, 0.7);
  }

  .menu-toggle {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border: none;
    border-radius: 1rem;
    background: rgba(0, 166, 166, 0.12);
    color: #0f2910;
    cursor: pointer;
    transition: background 200ms ease, transform 200ms ease;
  }

  .menu-toggle:hover,
  .menu-toggle:focus-visible {
    background: rgba(0, 166, 166, 0.22);
    transform: translateY(-1px);
  }

  .menu-toggle svg {
    width: 24px;
    height: 24px;
  }

  .nav {
    position: fixed;
    inset: 0;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: clamp(5rem, 15vw, 6rem) clamp(1.25rem, 8vw, 2.5rem) 2rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 220ms ease;
    overflow-y: auto;
  }

  .nav__panel {
    width: min(22rem, 100%);
    background: #fdfef9;
    border-radius: 1.5rem;
    padding: clamp(1.25rem, 6vw, 1.75rem);
    box-shadow: 0 22px 45px rgba(12, 34, 16, 0.22);
    transform: translateY(-12px);
    transition: transform 240ms ease;
    display: grid;
    gap: 0.5rem;
    pointer-events: auto;
  }

  .nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: grid;
    gap: 0.35rem;
  }

  .nav a {
    display: block;
    padding: 0.85rem 1rem;
    border-radius: 1rem;
    font-weight: 600;
    color: #0f2910;
    letter-spacing: 0.01em;
    transition: background 180ms ease, color 180ms ease, box-shadow 180ms ease;
  }

  .nav a:hover,
  .nav a:focus-visible,
  .nav a[data-active='true'] {
    background: rgba(46, 125, 50, 0.18);
    color: #12461c;
    box-shadow: inset 0 0 0 1px rgba(46, 125, 50, 0.45), 0 8px 16px rgba(18, 70, 28, 0.12);
  }

  .nav[data-open='true'] {
    opacity: 1;
    pointer-events: auto;
  }

  .nav[data-open='true'] .nav__panel {
    transform: translateY(0);
  }

  .scrim {
    position: fixed;
    inset: 0;
    background: rgba(8, 25, 12, 0.65);
    backdrop-filter: blur(6px);
    opacity: 0;
    pointer-events: none;
    transition: opacity 200ms ease;
  }

  .scrim[hidden] {
    display: none;
  }

  .scrim.is-active {
    opacity: 1;
    pointer-events: auto;
  }

  @media (max-width: 767px) {
    body.nav-open {
      overflow: hidden;
      touch-action: none;
    }

    .main-header__container {
      padding-right: 0.6rem;
    }
  }

  @media (min-width: 768px) {
    .main-header {
      padding-bottom: clamp(0.75rem, 2vw, 1.5rem);
    }

    .menu-toggle {
      display: none;
    }

    .nav {
      position: static;
      inset: auto;
      padding: 0;
      opacity: 1 !important;
      pointer-events: auto;
    }

    .nav__panel {
      width: auto;
      background: transparent;
      border-radius: 999px;
      box-shadow: none;
      padding: 0.25rem;
      transform: none !important;
      display: flex;
      align-items: center;
      gap: 0.25rem;
    }

    .nav ul {
      display: flex;
      align-items: center;
      gap: 0.25rem;
    }

    .nav a {
      border-radius: 999px;
      padding-inline: 1rem;
    }

    .scrim {
      display: none;
    }
  }

  @media (min-width: 1024px) {
    .main-header__container {
      padding: 0.5rem 1.25rem;
      gap: 1.5rem;
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>
