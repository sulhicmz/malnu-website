---
const navItems = [
  { href: '/', label: 'Beranda' },
  { href: '/profil', label: 'Profil' },
  { href: '/ppdb', label: 'PPDB' },
  { href: '/e-learning', label: 'E-Learning' },
  { href: '/alumni', label: 'Alumni' },
  { href: '/absensi', label: 'Absensi' },
  { href: '/arsip', label: 'Arsip' },
  { href: '/berita', label: 'Berita' },
  { href: '/beasiswa', label: 'Beasiswa' },
  { href: '/kontak', label: 'Kontak' }
];
const externalItems = [
  { href: 'https://emis.kemenag.go.id', label: 'EMIS' },
  { href: 'https://vervalpd.data.kemdikbud.go.id', label: 'VERVAL PD' },
  { href: 'https://simpatika.kemenag.go.id', label: 'SIMPATIKA' },
  { href: 'https://nisn.data.kemdikbud.go.id', label: 'Cek NISN' },
  { href: 'https://rdm.ma-malnukananga.sch.id', label: 'RDM' }
];
const currentPath = Astro.url.pathname;
---
<header class="site-header" role="banner">
  <div class="header-inner">
    <div class="brand">
      <a class="brand-link" href="/">
        <span aria-hidden="true">ðŸŒ¿</span>
        <strong>MA Malnu Kananga</strong>
      </a>
    </div>
    <button class="menu-toggle" type="button" aria-expanded="false" aria-controls="primary-navigation">
      <span class="sr-only">Toggle navigation</span>
      â˜°
    </button>
    <nav id="primary-navigation" class="nav" aria-label="Navigasi utama">
      <ul>
        {navItems.map((item) => (
          <li>
            <a class={currentPath === item.href ? 'active' : ''} href={item.href}>{item.label}</a>
          </li>
        ))}
        <li class="rdm">
          <a href="https://rdm.ma-malnukananga.sch.id" target="_blank" rel="noopener">RDM</a>
        </li>
      </ul>
    </nav>
  </div>
  <div class="quick-links" aria-label="Tautan resmi eksternal">
    {externalItems.map((item) => (
      <a href={item.href} target="_blank" rel="noopener" class="quick-link">
        {item.label}
      </a>
    ))}
  </div>
</header>
<script>
  const toggle = document.querySelector('.menu-toggle');
  const nav = document.querySelector('#primary-navigation');
  toggle?.addEventListener('click', () => {
    const expanded = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', String(!expanded));
    nav?.classList.toggle('open');
  });
</script>
<style>
  .site-header {
    position: sticky;
    top: 0.75rem;
    z-index: 50;
    margin: 0 clamp(0.5rem, 2vw, 2rem);
    border-radius: 1.75rem;
    background: rgba(243, 255, 229, 0.92);
    box-shadow: var(--shadow-soft);
    backdrop-filter: blur(10px);
    transition: box-shadow var(--transition-base), transform var(--transition-base);
  }

  .site-header:focus-within,
  .site-header:hover {
    box-shadow: var(--shadow-glow);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1rem;
    gap: 1rem;
  }

  .brand-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.1rem;
    color: var(--color-primary);
  }

  .menu-toggle {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 1rem;
    background: rgba(46, 125, 50, 0.12);
    color: var(--color-primary);
  }

  .nav {
    display: none;
  }

  .nav.open {
    display: block;
  }

  .nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .nav a {
    padding: 0.6rem 1rem;
    border-radius: 1rem;
    font-weight: 600;
    color: #0f2910;
    transition: background var(--transition-base), color var(--transition-base), box-shadow var(--transition-base);
  }

  .nav a:hover,
  .nav a:focus,
  .nav a.active {
    background: linear-gradient(120deg, rgba(46, 125, 50, 0.1), rgba(0, 166, 166, 0.15));
    box-shadow: inset 0 0 0 1px rgba(46, 125, 50, 0.25);
    color: var(--color-primary);
  }

  .quick-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
    padding: 0 1rem 1rem;
  }

  .quick-link {
    font-size: 0.8rem;
    padding: 0.4rem 0.75rem;
    border-radius: 999px;
    background: rgba(0, 166, 166, 0.12);
    color: var(--color-secondary);
    transition: background var(--transition-base), transform var(--transition-base);
  }

  .quick-link:hover,
  .quick-link:focus {
    background: rgba(0, 166, 166, 0.25);
    transform: translateY(-1px);
  }

  @media (min-width: 768px) {
    .menu-toggle {
      display: none;
    }

    .nav {
      display: block;
    }

    .nav ul {
      flex-direction: row;
    }

    .site-header {
      top: 1rem;
      margin: 0 auto;
      width: min(1100px, 95vw);
    }

    .quick-links {
      padding-bottom: 1.2rem;
    }
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }
</style>
