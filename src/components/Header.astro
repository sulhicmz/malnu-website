---
const navItems = [
  { href: '/', label: 'Beranda' },
  { href: '/profil', label: 'Profil' },
  { href: '/ppdb', label: 'PPDB' },
  { href: '/e-learning', label: 'E-Learning' },
  { href: '/alumni', label: 'Alumni' },
  { href: '/absensi', label: 'Absensi' },
  { href: '/arsip', label: 'Arsip' },
  { href: '/berita', label: 'Berita' },
  { href: '/beasiswa', label: 'Beasiswa' },
  { href: '/kontak', label: 'Kontak' }
];
const currentPath = Astro.url.pathname;
const isActive = (href: string) => currentPath === href || (href !== '/' && currentPath.startsWith(href));
---
<header class="site-header" role="banner" data-header>
  <div class="header-shell">
    <a class="brand" href="/">
      <span class="brand-symbol" aria-hidden="true">MA</span>
      <span class="brand-copy">
        <strong>MA Malnu Kananga</strong>
        <span>Madrasah Aliyah Modern</span>
      </span>
    </a>
    <button class="menu-toggle" type="button" aria-expanded="false" aria-controls="primary-navigation" data-toggle>
      <span class="sr-only">Buka navigasi utama</span>
      <span class="menu-icon" aria-hidden="true"></span>
    </button>
    <nav id="primary-navigation" class="primary-nav" aria-label="Navigasi utama" data-nav>
      <ul>
        {navItems.map((item) => (
          <li>
            <a class={isActive(item.href) ? 'active' : ''} href={item.href}>{item.label}</a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</header>
<script is:inline>
  const header = document.querySelector('[data-header]');
  const toggle = header?.querySelector('[data-toggle]');
  const nav = header?.querySelector('[data-nav]');
  const navLinks = nav?.querySelectorAll('a');

  function closeMenu() {
    if (!toggle || !nav) return;
    toggle.setAttribute('aria-expanded', 'false');
    nav.classList.remove('is-open');
  }

  toggle?.addEventListener('click', () => {
    if (!nav || !toggle) return;
    const expanded = toggle.getAttribute('aria-expanded') === 'true';
    toggle.setAttribute('aria-expanded', String(!expanded));
    nav.classList.toggle('is-open', !expanded);
  });

  navLinks?.forEach((link) =>
    link.addEventListener('click', () => {
      if (window.innerWidth < 960) {
        closeMenu();
      }
    })
  );

  window.addEventListener('resize', () => {
    if (window.innerWidth >= 960) {
      closeMenu();
    }
  });

  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
      const isExpanded = toggle?.getAttribute('aria-expanded') === 'true';
      if (isExpanded) {
        closeMenu();
        toggle?.focus();
      }
    }
  });
</script>
<style>
  .site-header {
    position: sticky;
    top: clamp(0.75rem, 2vw, 1.25rem);
    width: min(1040px, 92vw);
    margin: 0 auto;
    z-index: 50;
    display: grid;
    gap: 0.75rem;
  }

  .header-shell {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.85rem 1.1rem;
    border-radius: 1.75rem;
    background: rgba(255, 255, 255, 0.82);
    border: 1px solid rgba(255, 255, 255, 0.6);
    box-shadow: 0 18px 40px rgba(15, 40, 25, 0.12);
    backdrop-filter: blur(18px);
  }

  .brand {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--color-ink);
  }

  .brand-symbol {
    width: 2.9rem;
    height: 2.9rem;
    border-radius: 1.1rem;
    background: linear-gradient(135deg, rgba(46, 125, 50, 0.85), rgba(0, 166, 166, 0.8));
    color: #ffffff;
    font-weight: 700;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.6);
  }

  .brand-copy {
    display: grid;
    gap: 0.15rem;
    font-size: 0.85rem;
  }

  .brand-copy span:last-child {
    color: rgba(15, 31, 16, 0.65);
    font-weight: 500;
  }

  .menu-toggle {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 2.75rem;
    height: 2.75rem;
    border-radius: 1rem;
    border: 1px solid rgba(0, 166, 166, 0.18);
    background: rgba(0, 166, 166, 0.08);
    color: var(--color-secondary);
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.6);
  }

  .menu-icon {
    position: relative;
    width: 1.4rem;
    height: 1.4rem;
  }

  .menu-icon::before,
  .menu-icon::after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    height: 2px;
    background: currentColor;
    border-radius: 999px;
    transition: transform var(--transition-base), opacity var(--transition-base);
  }

  .menu-icon::before {
    top: 0.3rem;
  }

  .menu-icon::after {
    bottom: 0.3rem;
  }

  .primary-nav {
    position: fixed;
    inset: 0 0 auto 0;
    top: 0;
    background: rgba(11, 27, 16, 0.75);
    backdrop-filter: blur(24px);
    padding: 6rem 1.5rem 2rem;
    transform: translateY(calc(-100% - 3rem));
    opacity: 0;
    pointer-events: none;
    transition: transform var(--transition-base), opacity var(--transition-base);
  }

  .primary-nav.is-open {
    transform: translateY(0);
    opacity: 1;
    pointer-events: auto;
  }

  .primary-nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: grid;
    gap: 0.6rem;
  }

  .primary-nav a {
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    border-radius: 1rem;
    font-weight: 600;
    background: rgba(255, 255, 255, 0.08);
    color: #f3ffe5;
  }

  .primary-nav a.active,
  .primary-nav a:hover,
  .primary-nav a:focus {
    background: linear-gradient(120deg, rgba(46, 125, 50, 0.9), rgba(0, 166, 166, 0.9));
    color: #ffffff;
    box-shadow: var(--shadow-soft);
  }

  @media (min-width: 960px) {
    .menu-toggle {
      display: none;
    }

    .primary-nav {
      position: static;
      transform: none;
      background: transparent;
      padding: 0;
    }

    .primary-nav ul {
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .primary-nav a {
      color: var(--color-ink);
      background: transparent;
      padding: 0.6rem 0.95rem;
    }

    .primary-nav a.active,
    .primary-nav a:hover,
    .primary-nav a:focus {
      background: rgba(0, 166, 166, 0.12);
      color: var(--color-secondary);
      box-shadow: none;
    }

  }

  @media (prefers-reduced-motion: reduce) {
    .primary-nav {
      transition: none;
    }
  }
</style>
