---
import Base from '../layouts/Base.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
import { getCollection } from 'astro:content';
const entries = await getCollection('profil');
const ordered = entries.sort((a, b) => (a.data.order ?? 99) - (b.data.order ?? 99));
const breadcrumbs = [
  { label: 'Beranda', href: '/' },
  { label: 'Profil', href: '/profil' }
];
---
<Base
  title="Profil | MA MALNU Kananga"
  description="Profil lengkap MA MALNU Kananga mencakup sejarah, visi misi, nilai pesantren, serta fasilitas madrasah unggulan di Kananga, Menes, Kabupaten Pandeglang."
  breadcrumbs={breadcrumbs}
>
  <Breadcrumbs items={breadcrumbs} />
  <section class="card">
    <h1 class="section-title">Profil Madrasah</h1>
    {ordered.map((item) => (
      <article class="profil-block">
        <h2>{item.data.title}</h2>
        <div set:html={item.body}></div>
      </article>
    ))}
  </section>
</Base>
<style>
  .profil-block {
    margin-bottom: 2rem;
  }

  .profil-block h2 {
    color: var(--color-secondary);
  }
</style>
