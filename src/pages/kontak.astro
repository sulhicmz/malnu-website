---
import Base from '../layouts/Base.astro';
import Breadcrumbs from '../components/Breadcrumbs.astro';
const breadcrumbs = [
  { label: 'Beranda', href: '/' },
  { label: 'Kontak', href: '/kontak' }
];
---
<Base
  title="Kontak | MA MALNU Kananga"
  description="Kontak resmi MA MALNU Kananga mencakup alamat Jl. Raya Labuan Km. 5 Kananga, Menes 42262, telepon (0253) 234 567, dan email info@ma-malnukananga.sch.id."
  breadcrumbs={breadcrumbs}
>
  <Breadcrumbs items={breadcrumbs} />
  <section class="card">
    <h1 class="section-title">Hubungi Kami</h1>
    <address class="contact-card">
      <p class="contact-card__item">
        <span class="contact-card__label">Alamat</span>
        <span>Jl. Raya Labuan Km. 5 Kananga, Menes, Kabupaten Pandeglang, Banten 42262</span>
      </p>
      <p class="contact-card__item">
        <span class="contact-card__label">Telepon</span>
        <a href="tel:+62253234567">(0253) 234 567</a>
      </p>
      <p class="contact-card__item">
        <span class="contact-card__label">Email</span>
        <a href="mailto:info@ma-malnukananga.sch.id">info@ma-malnukananga.sch.id</a>
      </p>
    </address>
    <iframe
      title="Peta lokasi MA MALNU Kananga"
      src="https://maps.google.com/maps?q=MA%20MALNU%20Kananga%2C%20Kananga%2C%20Menes&t=&z=17&ie=UTF8&iwloc=&output=embed"
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"
      class="map"
    ></iframe>
  </section>
</Base>
<style>
  .contact-card {
    display: grid;
    gap: 0.75rem;
    font-style: normal;
    margin-bottom: 1.5rem;
  }

  .contact-card__item {
    display: grid;
    gap: 0.25rem;
  }

  .contact-card__label {
    font-size: 0.85rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: rgba(15, 41, 16, 0.6);
    font-weight: 600;
  }

  .map {
    width: 100%;
    border: 0;
    min-height: 320px;
    border-radius: 1.5rem;
    box-shadow: var(--shadow-soft);
  }
</style>
